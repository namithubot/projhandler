<head>
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script> 
<%= javascript_include_tag 'application'=%>
<%= csrf_meta_tag %>
<style>
	form { display: inline-block; }
</style>
</head>
<body>
<br/>
<div class="ui teal inverted menu">
    <%= link_to 'Add new', new_add_project_path, :method => :get, :class => "item" %>
    <%= link_to 'Logout', logout_path, :method => :delete, :class => "item" %>
    <%= link_to 'Groups', my_group_index_path, :method => :get, :class => "item" %>
    <%= link_to 'Change Password', forgot_password_path, :method => :get, :class => "item" %>
    <%= link_to 'Explore', explore_path, :method => :get, :class => "item" %>
</div>
<table class="ui teal celled structured table">
  <thead>
    <tr>
      <th rowspan="1">ID</th>
      <th rowspan="1">Title</th>
      <th colspan="1">Info</th>
   </tr>
  </thead>
 <% @add_proj.each do |proj| %>
 	<% if proj.admin == @admin_1 %>
 <tr>
  <td><%= proj.id %></td>
  <td><%= proj.title %></td>
  <td><%= button_to add_project_path(proj), :method => :get,  :class=> 'ui button' do%>
	<i class="info icon"></i><% end %>
  <%= button_to edit_add_project_path(proj), :method => :get,  :class=> 'ui button' do  %>
    <i class="edit icon"></i>
	<% end %>
<%= button_to add_project_path(proj), :method => :delete, :class=> 'ui button' do %>
    <i class="remove icon"></i>
	<% end %>
</td>
	<% end %>
 <% end %>
 </table>


</body>
