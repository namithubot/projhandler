<style>
form { display: inline-block;}
</style>
<div class="ui teal inverted menu">
    <%= link_to 'Home', add_project_index_path, :method => :get, :class => "item" %>
    <%= link_to 'Add new', new_add_project_path, :method => :get, :class => "item" %>
    <%= link_to 'Logout', logout_path, :method => :delete, :class => "item" %>
    <%= link_to 'Groups', my_group_index_path, :method => :get, :class => "item" %>
    <%= link_to 'Change Password', forgot_password_path, :method => :get, :class => "item" %>
    <%= link_to 'Explore', explore_path, :method => :get, :class => "item" %>
</div>

	<div class="ui piled segment">
	<% if @add_proj.admin == @admin_1 %>
		<td><%= button_to  edit_add_project_path(@add_proj), :method => :get, :class=> "ui button" do %> <i class="edit icon"></i><% end %>
  <%= button_to add_project_path(@add_proj), method: :delete, :data => { :confirm => 'Are you sure?' }, :class => "ui button" do %><i class="remove icon"></i><% end %>
	<% end %>
	<h4 class="header">Title: <%= @add_proj.title %></h4><br>
 <h5>	<% if @add_proj.admin != @admin_1 %>
  		By :<%= @add_proj.admin %><i class="user icon"><br>
	<% end %>
	<% if @add_proj.group_name != nil %>
 <i class="users icon"></i>Group: <%= @add_proj.group_name %><br>
	<% end %>
  <i class="warning sign icon"></i>Deadline: <%= @add_proj.deadline %><br>
	<% if @add_proj.link != nil %>
  <i class="linkify icon"></i><%= link_to 'Source', @add_proj.link %><br>
	<% end %>
  <i class="info icon"></i> <%= @add_proj.info %><br>
  <% case @add_proj.status
	when 0
		 @status_proj = 'To be started'
	when 1
		 @status_proj = 'Completed'
	when 2
		 @status_proj = 'In transit'
	when 3
		 @status_proj = 'Abandoned'
	else
		 @status_proj = 'Failed'
		end %>
	<i class="percent icon"></i>Status: <%= @status_proj %><br>
</h5>
</p>
   
