<head>
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"
></script>
<%= javascript_include_tag 'application'=%>
<%= csrf_meta_tag %>
<style>
        form { display: inline-block; }
</style>
</head>

<br/><div class="ui teal inverted menu">
<%= link_to 'Home', add_project_index_path, :method => :get, :class => "item" %>
<%= link_to 'Logout', logout_path, :method => :delete, :class => "item" %>
<%= link_to 'Create', new_my_group_path, :rel => "modal:open", :class => "item" %>
<%= link_to 'Join', new_member_path, :rel => "modal:open", :class => "item" %>
</div>
<div class="ui vertical animated list">
<h1> Your Groups </h1>

<% @mygroup.each do |mygrp| %>
		<div class="item">
		<i class="teal users icon"></i>
		<div class="content">
		<div class="header"><h3>
		<%= link_to mygrp.groupname, my_group_path(mygrp), :method => :get %></h3>
		</div></div></div>
<% end %>
<hr>
<h1> Group gifted by your participation </h1>
<% @group.each do |grp| %>
			<% grp = MyGroup.find_by(:groupname => grp.groupname) %>
		<div class="item">
		<i class="teal users icon"></i>
		<div class="content">
		<div class="header"><h3>
		<%= link_to mygrp.groupname, my_group_path(mygrp), :method => :get %></h3>
		</div></div></div>
<% end %>
</div>

